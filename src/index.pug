      .mv_ani.no1
      .mv_ani.no2
      .mv_ani.no3
    a.mv_arw_bottom(href="#ffi")
    .sp_hum_toggle
      .sp_hum_line
      .sp_hum_line
      .sp_hum_line

  // main
  main.main
    // main_left
    .main_left.js_fixed_target_content
      .main_left_inr
        .main_left_logo.forPC
          img(src= imgPath + "logo_ffi_bl.png", alt="FFi")
        .main_left_logo.forSP
          img(src= imgPath + "logo_ffi.png", alt="FFi")
        nav.main_left_nav
