        // section
        section#contact.section
          .main_right_heading_wrap
            h2.main_right_heading.noto_serif お問い合わせ
            form#form_main.form.target(method="post" action="/contact.php")
              .form_inr
                .form_table
                  .form_table_name お問い合わせ内容
                  .form_table_data
                    ul.form_ul
                      li.form_li
                        input#order.radio(type='radio', name='contact_detail', value='ご依頼')
                        label.label(for='order') ご依頼
                      li.form_li
                        input#come_member.radio(type='radio', name='contact_detail', value='メンバー応募')
                        label.label(for='come_member') メンバー応募
